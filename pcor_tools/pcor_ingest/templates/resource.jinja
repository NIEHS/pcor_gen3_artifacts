{
  "type": "resource",
  "submitter_id": "{{ resource.submitter_id }}",
  "name": "{{ resource.name }}",
  "long_name": "{{ resource.long_name }}",
  "short_name": "{{ resource.short_name }}",
  "resource_type": "{{resource.resource_type}}",
  "resource_url": "{{ resource.resource_url }}",
  "description": "{{ resource.description }}",

  "domain": [
    {% for entry in resource.domain %}
        "{{ entry }}"
      {{ "," if not loop.last }}
    {% endfor %}
  ],

  "keywords":  [
    {% for entry in resource.keywords %}
        "{{ entry }}"
      {{ "," if not loop.last }}
    {% endfor %}
  ],

  "access_type": {{   resource.access_type }},
  "resource_use_agreement": "{{ resource.resource_use_agreement }}",
  "resource_reference": "{{ resource.resource_reference }}",

  "publications":  [
    {% for entry in resource.publications %}
        "{{ entry }}"
      {{ "," if not loop.last }}
    {% endfor %}
  ],

  "publication_links": [
    {% for entry in resource.publication_links %}
        "{{ entry }}"
      {{ "," if not loop.last }}
     {% endfor %}
   ],

  {% if resource.is_static %}
      "is_static": true,
  {% else %}
       "is_static": false,
  {% endif %}

  "strengths": "{{ resource.strengths }}",

   {% if resource.payment_required %}
      "payment_required": true,
  {% else %}
       "payment_required": false,
  {% endif %}

  "limitations": "{{ resource.limitations }}",

  "projects": {
    "node_id": "{{ resource.project.id }}",
    "code": "{{ resource.project.code }}"
  }
}