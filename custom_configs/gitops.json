          {
            "tabName": "Resource",
            "groups": [
              {
                "header": "Resource Summary",
                "fields": [
                  {
                    "type": "block",
                    "sourceField": "description"
                  }
                ]
              },
              {
                "header": "(Meta)Data Location",
                "fields": [
                  {
                    "type": "link",
                    "label": "Repository URL",
                    "sourceField": "resource_url"
                  }
                ]
              }
            ]
            }
      ]
    },
    "minimalFieldMapping": {
      "tagsListFieldName": "tags",
      "uid": "resource_id"
